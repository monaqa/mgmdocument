%%%[[[easy enumitem commands]]]
%%%you cannot use these in class where enumitem style file is not allowed, such as beamer. 
%numbering (1),(2),(3),...
\newenvironment{enumparen}{\begin{enumerate}[label=(\arabic*)]}{\end{enumerate}}
%numbering (i),(ii),(iii),...
\newenvironment{enumpareni}{\begin{enumerate}[label=(\roman*)]}{\end{enumerate}}
%numbering 問1.,問2.,問3.,...
\newenvironment{enumtoi}{\begin{enumerate}[label={\textbf{問{\arabic*}.}}]%
\setlength{\itemsep}{4pt}}{\end{enumerate}}
%numbering 問題1.,問題2.,問題3.,...
\newenvironment{enummondai}{\begin{enumerate}[label={\textbf{問題{\arabic*}.}}]%
\setlength{\itemsep}{4pt}}{\end{enumerate}}
%numbering 解答1.,解答2.,解答3.,...
\newenvironment{enumkaitou}{\begin{enumerate}[label={\textbf{解答{\arabic*}.}}]}{\end{enumerate}}

